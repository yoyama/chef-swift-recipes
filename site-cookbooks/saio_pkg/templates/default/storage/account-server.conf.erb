[DEFAULT]
user = <%= @user %>
bind_ip = <%= @storage_local_net_ip %>
bind_port = 6002
workers = 2
log_facility = <%= @log_facility %>
recon_cache_path = /var/cache/swift
eventlet_debug = true

[pipeline:main]
pipeline = recon account-server

[filter:recon]
use = egg:swift#recon

[app:account-server]
use = egg:swift#account

[account-replicator]

[account-auditor]

[account-reaper]