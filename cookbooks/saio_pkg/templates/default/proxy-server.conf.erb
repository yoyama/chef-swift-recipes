[DEFAULT]
bind_port = 8080
user = <%= @user %>
log_facility = LOG_LOCAL1
eventlet_debug = true
workers = 4

[pipeline:main]
#keystone
pipeline = catch_errors healthcheck proxy-logging cache swift3 s3token tempurl authtoken keystone proxy-server

#tempauth
#pipeline = healthcheck cache swift3 tempurl tempauth staticweb proxy-logging proxy-server


[app:proxy-server]
use = egg:swift#proxy
allow_account_management = true
account_autocreate = true

[filter:keystone]
use = egg:swift#keystoneauth
paste.filter_factory = keystone.middleware.swift_auth:filter_factory
operator_roles = admin, swiftoperator, Member

[filter:authtoken]
paste.filter_factory = keystone.middleware.auth_token:filter_factory
# Delaying the auth decision is required to support token-less
# usage for anonymous referrers ('.r:*').
delay_auth_decision = 1
service_port = 5000
service_host = <%=@ks_auth_host_internal%>
auth_port = 35357
auth_protocol = http
auth_host = <%= @ks_auth_host_internal%>
auth_token = <%= @ks_admin_token%>
admin_token = <%= @ks_admin_token%>
signing_dir = /var/lib/swift/keystone-signing

[filter:tempauth]
use = egg:swift#tempauth
user_admin_admin = admin .admin .reseller_admin
user_test_tester = testing .admin
user_test2_tester2 = testing2 .admin
user_test_tester3 = testing3

[filter:healthcheck]
use = egg:swift#healthcheck

[filter:cache]
use = egg:swift#memcache
memcache_servers = <%= @memcached_ips %>

[filter:swift3]
paste.filter_factory = swift3.middleware:filter_factory

[filter:catch_errors]
use = egg:swift#catch_errors

# Note: Put staticweb just after your auth filter(s) in the pipeline
[filter:staticweb]
use = egg:swift#staticweb
# Seconds to cache container x-container-meta-web-* header values.
cache_timeout = 300
# You can override the default log routing for this filter here:
set log_name = staticweb
set log_facility = LOG_LOCAL1
set log_level = DEBUG
# set log_address = /dev/log
set access_log_name = staticweb
set access_log_facility = LOG_LOCAL1
set access_log_level = INFO
set log_headers = True

# Note: Put tempurl just before your auth filter(s) in the pipeline
[filter:tempurl]
use = egg:swift#tempurl

[filter:s3token]
paste.filter_factory = keystone.middleware.s3_token:filter_factory
# uncomment the following line if you don't want to use SSL
auth_protocol = http
auth_port = 35357
auth_host = <%=@ks_auth_host_internal%>

[filter:proxy-logging]
use = egg:swift#proxy_logging

