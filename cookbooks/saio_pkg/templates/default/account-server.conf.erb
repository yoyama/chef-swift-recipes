[DEFAULT]
devices = /srv/<%= @storage_no %>/node
mount_check = false
disable_fallocate = true
bind_port = <%= @bind_port %>
user = <%= @user %>
log_facility = <%= @log_facility %>
recon_cache_path = /var/cache/swift<%= @cache_no %>
eventlet_debug = true

[pipeline:main]
pipeline = recon account-server

[app:account-server]
use = egg:swift#account

[filter:recon]
use = egg:swift#recon

[account-replicator]
vm_test_mode = yes

[account-auditor]

[account-reaper]
