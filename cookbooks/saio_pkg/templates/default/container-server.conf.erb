[DEFAULT]
devices = /srv/<%= @storage_no %>/node
mount_check = false
disable_fallocate = true
bind_port = <%= @bind_port %>
user = <%= @user %>
log_facility = <%= @log_facility %>
recon_cache_path = /var/cache/swift<%= @cache_no %>
eventlet_debug = true

[pipeline:main]
pipeline = recon container-server

[app:container-server]
use = egg:swift#container

[filter:recon]
use = egg:swift#recon

[container-replicator]
vm_test_mode = yes

[container-updater]

[container-auditor]

[container-sync]
